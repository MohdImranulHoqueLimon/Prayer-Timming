<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLIGHTCORAL"
    android:orientation="vertical"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_detials"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtTodayDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Saturday"
                android:textColor="@color/colorBlack"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/txtEnglishDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTodayDay"
                android:gravity="center"
                android:text="15th January 2017"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtArabicDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtEnglishDate"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:text="17th Jumada Al-Awwal 1438"
                android:textColor="@color/colorBlack"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewLine1"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/txtArabicDate"
                android:background="@color/colorGray" />

            <LinearLayout
                android:id="@+id/fajrLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewLine1"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtFajr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Fajr"
                    android:textColor="@color/colorBlack"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/txtFajrTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="05:34 AM"
                    android:textAlignment="textEnd"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/fajrSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <View
                android:id="@+id/viewLine2"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/fajrLinearLayout"
                android:background="@color/colorLightGray" />

            <LinearLayout
                android:id="@+id/dhuhrLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewLine2"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtDhuhr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Dhuhr"
                    android:textColor="@color/colorLIGHTCORAL"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDhuhrTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="05:34 AM"
                    android:textAlignment="textEnd"
                    android:textColor="@color/colorLIGHTCORAL"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/dhuhrSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <View
                android:id="@+id/viewLine3"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/dhuhrLinearLayout"
                android:background="@color/colorLightGray" />

            <LinearLayout
                android:id="@+id/asrLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dhuhrLinearLayout"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtAsr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Asr"
                    android:textColor="@color/colorBlack"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/txtAsrTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="05:34 AM"
                    android:textAlignment="textEnd"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/asrSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <View
                android:id="@+id/viewLine4"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/asrLinearLayout"
                android:background="@color/colorLightGray" />

            <LinearLayout
                android:id="@+id/maghribLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewLine4"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtMaghrib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Maghrib"
                    android:textColor="@color/colorBlack"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/txtMaghribTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="05:34 AM"
                    android:textAlignment="textEnd"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/maghribSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp" />
            </LinearLayout>

            <View
                android:id="@+id/viewLine5"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@id/maghribLinearLayout"
                android:background="@color/colorLightGray" />

            <LinearLayout
                android:id="@+id/ishaLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewLine5"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/txtIsha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Isha"
                    android:textColor="@color/colorBlack"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/txtIshaTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:text="05:34 AM"
                    android:textAlignment="textEnd"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <Switch
                    android:id="@+id/IshaSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>